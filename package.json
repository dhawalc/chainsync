    "next": "14.1.0",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.2.1",
    "nodemailer": "^6.10.0",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.15.1",
    "sharp": "^0.31.3",
    "snowflake-sdk": "^2.0.2",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
