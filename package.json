{
  "name": "chainsync",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "sh scripts/deploy.sh",
    "deploy:windows": "deploy.bat",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "docker:build": "docker build -t chainsync:latest .",
    "docker:run": "docker run -p 3000:3000 chainsync:latest",
    "docker:dev": "bash ./scripts/docker-dev.sh",
    "fix-metadata": "ts-node scripts/fix-metadata.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
